// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Superhero {
    id              Int @id @default(autoincrement())
    name            String
    alterEgo        String
    stamina         Int
    staminaInjured  Int
    speed           Int
    size            Int
    threat          Int
    physicalD       Int
    energyD         Int
    mysticD         Int
    attacks         Attack[]
    superPowers     SuperPower[]
    affiliations    Affiliation[]
}

enum AttackType {
    PHYSICAL
    ENERGY
    MYSTIC
}

model Attack {
    id          Int @id @default(autoincrement())
    superheroId Int
    name        String
    type        AttackType
    range       String
    strength    String
    power       Int @default(0)
    effects     String[]
    healthy     Boolean
    injured     Boolean
    superhero   Superhero @relation(fields: [superheroId], references: [id])
}

enum SuperPowerType {
    ACTIVE
    REACTIVE
    INNATE
    LEADERSHIP
}

model SuperPower {
    id          Int @id @default(autoincrement())
    superheroId Int
    name        String
    power       String?
    type        SuperPowerType
    effect      String?
    healthy     Boolean
    injured     Boolean
    superhero   Superhero @relation(fields: [superheroId], references: [id])
}

model Affiliation {
    id          Int @id @default(autoincrement())
    name        String
    superheros  Superhero[]
}

enum CrisisType {
    EXTRACT
    SECURE
}

enum Map {
    A
    B
    C
    D
    E
    F
}

model Crisis {
    id      Int @id @default(autoincrement())
    type    CrisisType
    threat  Int
    name    String
    map     Map
    setup   String
    scoring String
    rules   String[]
}

enum TacticType {
    ACTIVE
    REACTIVE
}

model Tactic {
    id          Int @id @default(autoincrement())
    name        String
    type        TacticType
    description String
}